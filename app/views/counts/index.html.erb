<h1>Listing counts</h1>

<table>
  <tr>
    <th>Weibo_id</th>
    <th>Comments</th>
    <th>Reposts</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
  </tr>

<% @counts.each do |count| %>
  <tr>
    <td><%= count.weibo_id %></td>
    <td><%= count.comments %></td>
    <td><%= count.reposts %></td>
    <td><%= count.quantity %></td>
    <td><%= link_to 'Show', count %></td>
    <td><%= link_to 'Edit', edit_count_path(count) %></td>
    <td><%= link_to 'Destroy', count, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= will_paginate @counts,
       :previous_label => '上一页',
	   :next_label => '下一页' %>
</p>
<br />


<%= link_to 'New Count', new_count_path %>
