<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", category_weibos_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_category_weibo_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", category_weibo_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.category_weibo.category_id", :default => t("activerecord.labels.category_id", :default => "Category")) %>:</b>
          <%= @category_weibo.category_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.category_weibo.weibo_info_id", :default => t("activerecord.labels.weibo_info_id", :default => "Weibo info")) %>:</b>
          <%= @category_weibo.weibo_info_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.category_weibo.quantity", :default => t("activerecord.labels.quantity", :default => "Quantity")) %>:</b>
          <%= @category_weibo.quantity %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_category_weibo_path(@category_weibo), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), category_weibo_path(@category_weibo), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>